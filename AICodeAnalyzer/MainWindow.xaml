<Window x:Class="AICodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="AI Code Analyzer" Height="800" Width="1200">
    
    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Exit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="_Settings" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Configure..." Click="MenuConfigure_Click"/>
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_About" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Row 0 -->
                <RowDefinition Height="Auto"/> <!-- Row 1 -->
                <RowDefinition Height="Auto"/> <!-- Row 2 -->
                <RowDefinition Height="Auto"/> <!-- Row 3 -->
                <RowDefinition Height="*"/>    <!-- Row 4 -->
                <RowDefinition Height="Auto"/> <!-- Row 5 -->
                <RowDefinition Height="Auto"/> <!-- Row 6 -->
                <RowDefinition Height="*"/>    <!-- Row 7 -->
                <RowDefinition Height="Auto"/>  <!-- Row 8 -->
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Project Selection Area -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Project Selection" Margin="0,0,5,10" Padding="5">
                <StackPanel>
                    <DockPanel Margin="0,5">
                        <Button x:Name="BtnSelectFolder" Content="Select Folder" Click="BtnSelectFolder_Click" Width="100" DockPanel.Dock="Right" Margin="5,0,0,0" Height="25"/>
                        <TextBox x:Name="TxtSelectedFolder" IsReadOnly="True" VerticalContentAlignment="Center"/>
                    </DockPanel>
                    <TextBlock x:Name="TxtStatus" Text="Ready" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

            <!-- API Selection Area -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="AI API Selection" Margin="0,0,5,10" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- AI API ComboBox -->
                    <ComboBox x:Name="CboAiApi" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,5"
                              SelectionChanged="CboAiApi_SelectionChanged" />

                    <!-- Model Selection -->
                    <Label Content="Model:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5" />
                    <ComboBox x:Name="CboModel"
                              Grid.Row="1" Grid.Column="1"
                              IsEnabled="False"
                              Margin="0,0,5,5"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="CboModel_SelectionChanged" />

                    <!-- API Key Section -->
                    <TextBlock Text="API Key:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5" />
                    <PasswordBox x:Name="TxtApiKey" Grid.Row="2" Grid.Column="1" Margin="0,0,5,5" />
                    <ComboBox x:Name="CboPreviousKeys" Grid.Row="2" Grid.Column="2" Width="100"
                              Margin="0,0,5,5"
                              SelectionChanged="CboPreviousKeys_SelectionChanged" />

                    <!-- Save Button -->
                    <Button x:Name="BtnSaveKey" Content="Save Current Key" Grid.Row="3" Grid.Column="0"
                            Grid.ColumnSpan="3" Margin="0,0,0,0" Click="BtnSaveKey_Click" Height="25"/>
                </Grid>
            </GroupBox>

            <!-- Analyze Button -->
            <Button x:Name="BtnAnalyze" Content="Analyze Code" Grid.Row="3" Grid.Column="0" Height="25"
                    Margin="0,0,5,10" Click="BtnAnalyze_Click" />

            <!-- Files List -->
            <GroupBox Grid.Row="4" Grid.Column="0" Header="Source Files" Margin="0,0,5,10" Padding="5">
                <ListView x:Name="LvFiles" Margin="0,5">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>            </GroupBox>

            <!-- Follow-up Question -->
            <GroupBox Grid.Row="5" Grid.Column="0" Header="Follow-up Question" Margin="0,0,5,10" Padding="5">
                <DockPanel>
                    <Button x:Name="BtnSendFollowup" Content="Send" Width="60" DockPanel.Dock="Right" Margin="5,0,0,0"
                            IsEnabled="False" Click="BtnSendFollowup_Click" />
                    <TextBox x:Name="TxtFollowupQuestion" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" IsEnabled="False" />
                </DockPanel>
            </GroupBox>
            
            <!-- GridSplitter -->
            <GridSplitter 
                Grid.Row="0" 
                Grid.RowSpan="6" 
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="#DDDDDD"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeWE"/>
            
            <!-- Response Area -->
            <GroupBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="6" Header="AI Analysis" Margin="5,0,0,10" Padding="5">
                <DockPanel>
                    <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnSaveResponse" Content="Save Response" Grid.Column="0" Height="30" Margin="0,0,2,0" Click="BtnSaveResponse_Click" IsEnabled="False"/>
                        <Button x:Name="BtnToggleMarkdown" Content="Show Raw Text" Grid.Column="1" Height="30" Margin="2,0,0,0" Click="BtnToggleMarkdown_Click" IsEnabled="False"/>
                    </Grid>
                    
                    <!-- Markdown Display -->
                    <Grid>
                        <!-- Regular TextBox (for raw view) -->
                        <TextBox x:Name="TxtResponse" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                                 FontFamily="Consolas" Visibility="Collapsed"/>
                        
                        <!-- Markdown Viewer -->
                        <ScrollViewer x:Name="MarkdownScrollViewer" Visibility="Visible" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto"
                                      PanningMode="VerticalOnly"
                                      CanContentScroll="True"
                                      PreviewMouseWheel="MarkdownScrollViewer_PreviewMouseWheel"
                                      SizeChanged="MarkdownScrollViewer_SizeChanged">
                            <markdig:MarkdownViewer x:Name="MarkdownViewer" 
                                                   Background="White" 
                                                   Padding="10"
                                                   HorizontalAlignment="Stretch" />
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </GroupBox>
            
            <!-- Log Panel -->
            <GroupBox Grid.Row="7" 
                      Grid.Column="0" 
                      Grid.ColumnSpan="3" 
                      Header="Operation Log" 
                      Margin="0,5,0,0" 
                      Padding="5" 
                      VerticalAlignment="Stretch">
                <TextBox x:Name="TxtLog" 
                         IsReadOnly="True" 
                         TextWrapping="NoWrap" 
                         FontFamily="Consolas" 
                         FontSize="11"
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto"
                         VerticalAlignment="Stretch"
                         Background="#F5F5F5"/>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>