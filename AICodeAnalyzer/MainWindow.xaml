<Window x:Class="AICodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="AI Code Analyzer" Height="800" Width="1200">
    
    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Exit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="_Settings" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Configure..." Click="MenuConfigure_Click"/>
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_About" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="7*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Project Selection Area -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Project Selection" Margin="0,0,5,10" Padding="5">
                <StackPanel>
                    <DockPanel Margin="0,5">
                        <Button x:Name="BtnSelectFolder" Content="Select Folder" Click="BtnSelectFolder_Click" Width="100" DockPanel.Dock="Right" Margin="5,0,0,0"/>
                        <TextBox x:Name="TxtSelectedFolder" IsReadOnly="True" VerticalContentAlignment="Center"/>
                    </DockPanel>
                    <TextBlock x:Name="TxtStatus" Text="Ready" Margin="0,5"/>
                </StackPanel>
            </GroupBox>
            
            <!-- API Selection Area -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="AI API Selection" Margin="0,0,5,10" Padding="5">
                <StackPanel>
                    <ComboBox x:Name="CboAiApi" Margin="0,5" SelectionChanged="CboAiApi_SelectionChanged"/>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="API Key:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="CboPreviousKeys" Width="100" SelectionChanged="CboPreviousKeys_SelectionChanged" DockPanel.Dock="Right"/>
                        <PasswordBox x:Name="TxtApiKey" Margin="0,0,5,0"/>
                    </DockPanel>
                    <Button x:Name="BtnSaveKey" Content="Save Current Key" Margin="0,5,0,0" Click="BtnSaveKey_Click"/>
                </StackPanel>
            </GroupBox>
            
            <!-- Analyze Button -->
            <Button x:Name="BtnAnalyze" Content="Analyze Code" Grid.Row="2" Grid.Column="0" Height="30" Margin="0,0,5,10" Click="BtnAnalyze_Click"/>
            
            <!-- Files List -->
            <GroupBox Grid.Row="3" Grid.Column="0" Header="Source Files" Margin="0,0,5,10" Padding="5">
                <ListView x:Name="LvFiles" Margin="0,5"/>
            </GroupBox>
            
            <!-- Follow-up Question -->
            <GroupBox Grid.Row="4" Grid.Column="0" Header="Follow-up Question" Margin="0,0,5,10" Padding="5">
                <DockPanel>
                    <Button x:Name="BtnSendFollowup" Content="Send" Width="60" DockPanel.Dock="Right" Margin="5,0,0,0" IsEnabled="False" Click="BtnSendFollowup_Click"/>
                    <TextBox x:Name="TxtFollowupQuestion" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsEnabled="False"/>
                </DockPanel>
            </GroupBox>
            
            <!-- GridSplitter -->
            <GridSplitter 
                Grid.Row="0" 
                Grid.RowSpan="5" 
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="#DDDDDD"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeWE"/>
            
            <!-- Response Area -->
            <GroupBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="5" Header="AI Analysis" Margin="5,0,0,10" Padding="5">
                <DockPanel>
                    <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnSaveResponse" Content="Save Response" Grid.Column="0" Height="30" Margin="0,0,2,0" Click="BtnSaveResponse_Click" IsEnabled="False"/>
                        <Button x:Name="BtnToggleMarkdown" Content="Show Raw Text" Grid.Column="1" Height="30" Margin="2,0,0,0" Click="BtnToggleMarkdown_Click" IsEnabled="False"/>
                    </Grid>
                    
                    <!-- Markdown Display -->
                    <Grid>
                        <!-- Regular TextBox (for raw view) -->
                        <TextBox x:Name="TxtResponse" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                                 FontFamily="Consolas" Visibility="Collapsed"/>
                        
                        <!-- Markdown Viewer -->
                        <ScrollViewer x:Name="MarkdownScrollViewer" Visibility="Visible" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      PanningMode="VerticalOnly"
                                      CanContentScroll="True"
                                      PreviewMouseWheel="MarkdownScrollViewer_PreviewMouseWheel"
                                      SizeChanged="MarkdownScrollViewer_SizeChanged">
                            <markdig:MarkdownViewer x:Name="MarkdownViewer" 
                                                   Background="White" 
                                                   Padding="10"
                                                   HorizontalAlignment="Stretch"
                                                   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </GroupBox>
            
            <!-- Horizontal GridSplitter -->
            <GridSplitter 
                Grid.Row="6" 
                Grid.Column="0" 
                Grid.ColumnSpan="3"
                Height="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="#DDDDDD"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeNS"/>
                
            <!-- Log Panel -->
            <GroupBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Header="Operation Log" Margin="0,5,0,0" Padding="5">
                <TextBox x:Name="TxtLog" 
                         IsReadOnly="True" 
                         TextWrapping="NoWrap" 
                         FontFamily="Consolas" 
                         FontSize="11"
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto" 
                         Background="#F5F5F5"/>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>