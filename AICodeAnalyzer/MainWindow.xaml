<Window x:Class="AICodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="AI Code Analyzer" Height="800" Width="1500">

    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu at the top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Exit" Click="MenuExit_Click" />
            </MenuItem>
            <MenuItem Header="_Settings" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Configure..." Click="MenuConfigure_Click" />
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_About" Click="MenuAbout_Click" />
            </MenuItem>
        </Menu>

        <!-- StatusBar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="TxtStatus" Text="Ready" />
        </StatusBar>

        <!-- Main content grid (fills remaining space) -->
        <Grid Margin="10">
            <!-- Grid content remains unchanged -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Row 0 -->
                <RowDefinition Height="Auto" /> <!-- Row 1 -->
                <RowDefinition Height="Auto" /> <!-- Row 2 -->
                <RowDefinition Height="Auto" /> <!-- Row 3 -->
                <RowDefinition Height="*" />    <!-- Row 4 -->
                <RowDefinition Height="Auto" /> <!-- Row 5 -->
                <RowDefinition Height="Auto" /> <!-- Row 6 -->
                <RowDefinition Height="*" />    <!-- Row 7 -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="7*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <!-- Project Selection Area -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Project Selection" Margin="0,0,5,10" Padding="5">
                <StackPanel Margin="10">
                    <TextBlock Text="Project Files" FontWeight="Bold" Margin="0,0,0,5" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtSelectedFolder" IsReadOnly="True" Grid.Column="0" Margin="0,0,5,0" />
                        <Button x:Name="BtnSelectFolder" Content="Select Folder" Grid.Column="1"
                                Click="BtnSelectFolder_Click" Padding="8,3" Margin="0,0,5,0" />
                        <Button x:Name="BtnSelectFiles" Content="Add Files" Grid.Column="2"
                                Click="BtnSelectFiles_Click" Padding="8,3" Margin="0,0,5,0"
                                ToolTip="Add specific files to the analysis" />
                        <Button x:Name="BtnClearFiles" Content="Clear" Grid.Column="3" Click="BtnClearFiles_Click"
                                Padding="8,3" ToolTip="Clear all selected files" />
                    </Grid>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Grid.Row="2" Grid.Column="0" Header="Initial Prompt" Margin="0,0,5,10" Padding="5">
                <StackPanel Margin="10">
                    <TextBlock Text="Select Template" FontWeight="Bold" Margin="0,0,0,5" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="CboPromptTemplate" Grid.Column="0" 
                                  SelectionChanged="CboPromptTemplate_SelectionChanged"
                                  DisplayMemberPath="Name"
                                  Margin="0,0,5,0" />
                        <Button x:Name="BtnConfigurePrompts" Content="Edit" 
                                Grid.Column="1" Padding="8,3" 
                                Click="BtnConfigurePrompts_Click" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- API Selection Area -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="AI API Selection" Margin="0,0,5,10" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- AI API ComboBox -->
                    <ComboBox x:Name="CboAiApi" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,5"
                              SelectionChanged="CboAiApi_SelectionChanged" />

                    <!-- Model Selection -->
                    <Label Content="Model:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5" />
                    <ComboBox x:Name="CboModel"
                              Grid.Row="1" Grid.Column="1"
                              IsEnabled="False"
                              Margin="0,0,5,5"
                              HorizontalAlignment="Stretch"
                              SelectionChanged="CboModel_SelectionChanged" />

                    <!-- API Key Section -->
                    <TextBlock Text="API Key:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5" />
                    <PasswordBox x:Name="TxtApiKey" Grid.Row="2" Grid.Column="1" Margin="0,0,5,5" />
                    <ComboBox x:Name="CboPreviousKeys" Grid.Row="2" Grid.Column="2" Width="100"
                              Margin="0,0,5,5"
                              SelectionChanged="CboPreviousKeys_SelectionChanged" />

                    <!-- Save Button -->
                    <Button x:Name="BtnSaveKey" Content="Save Current Key" Grid.Row="3" Grid.Column="0"
                            Grid.ColumnSpan="3" Margin="0,0,0,0" Click="BtnSaveKey_Click" Height="25" />
                </Grid>
            </GroupBox>

            <!-- Analyze Button -->
            <Button Content="Analyze Code" Grid.Row="3" Grid.Column="0" Height="25"
                    Margin="0,0,5,10" Click="BtnAnalyze_Click" />

            <!-- Files List -->
            <GroupBox Grid.Row="4" Grid.Column="0" Grid.RowSpan="3" Header="Files List" Margin="0,0,5,10" Padding="5"
                      VerticalAlignment="Stretch">
                <ListView x:Name="LvFiles" Margin="0,5" VerticalAlignment="Stretch">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </GroupBox>

            <!-- GridSplitter -->
            <GridSplitter
                Grid.Row="0"
                Grid.RowSpan="7"
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="#DDDDDD"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeWE" />

            <!-- Response Area -->
            <!-- Response Area -->
            <GroupBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="5" Header="AI Analysis" Margin="5,0,0,10" Padding="5">
                <DockPanel>
                    <!-- Message Navigation Panel -->
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Previous Response Button -->
                        <Button x:Name="BtnPreviousResponse" Grid.Column="0"
                                Content="◀" FontSize="14" Width="30" Height="30"
                                ToolTip="View Previous Response"
                                Click="BtnPreviousResponse_Click"
                                IsEnabled="False" />

                        <!-- Message Counter Display -->
                        <TextBlock x:Name="TxtResponseCounter" Grid.Column="1"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Text="Response 0 of 0" FontSize="12" />

                        <!-- Next Response Button -->
                        <Button x:Name="BtnNextResponse" Grid.Column="2"
                                Content="▶" FontSize="14" Width="30" Height="30"
                                ToolTip="View Next Response"
                                Click="BtnNextResponse_Click"
                                IsEnabled="False" />
                    </Grid>

                    <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnSaveResponse" Content="Save Response" Grid.Column="0" Height="30"
                                Margin="0,0,2,0" Click="BtnSaveResponse_Click" IsEnabled="False" />
                        <Button x:Name="BtnToggleMarkdown" Content="Show Raw Text" Grid.Column="1" Height="30"
                                Margin="2,0,0,0" Click="BtnToggleMarkdown_Click" IsEnabled="False" />
                    </Grid>

                    <!-- Markdown Display -->
                    <Grid>
                        <!-- Regular TextBox (for raw view) -->
                        <TextBox x:Name="TxtResponse" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" Visibility="Collapsed" />

                        <!-- Markdown Viewer -->
                        <ScrollViewer x:Name="MarkdownScrollViewer" Visibility="Visible"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      PanningMode="VerticalOnly"
                                      CanContentScroll="True"
                                      PreviewMouseWheel="MarkdownScrollViewer_PreviewMouseWheel"
                                      SizeChanged="MarkdownScrollViewer_SizeChanged">
                            <markdig:MarkdownViewer x:Name="MarkdownViewer"
                                                    Background="White"
                                                    Padding="10"
                                                    HorizontalAlignment="Stretch" />
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <!-- Follow-up Question -->
            <GroupBox Grid.Row="6" Grid.Column="2" Header="Follow-up Question" Margin="5,0,0,0" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" /> <!-- For checkbox -->
                        <RowDefinition Height="*" />   <!-- For textbox -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" /> <!-- Expanding space -->
                        <ColumnDefinition Width="Auto" /> <!-- For button -->
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="ChkIncludeSelectedFiles" Content="Include selected files with question" 
                              Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,5"
                              IsEnabled="False" ToolTip="Include the files selected in the file list with your follow-up question" />
                    <TextBox x:Name="TxtFollowupQuestion" Grid.Row="1" Grid.Column="0" Height="60" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsEnabled="False" />
                    <Button x:Name="BtnSendFollowup" Content="Send" Grid.Row="1" Grid.Column="1" Width="60" 
                            Margin="5,0,0,0" IsEnabled="False" Click="BtnSendFollowup_Click" />
                </Grid>
            </GroupBox>

            <!-- Log Panel -->
            <GroupBox Grid.Row="7"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Header="Operation Log"
                      Margin="0,5,0,0"
                      Padding="5"
                      VerticalAlignment="Stretch">
                <TextBox x:Name="TxtLog"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalAlignment="Stretch"
                         Background="#F5F5F5" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>