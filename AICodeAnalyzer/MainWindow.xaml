<Window x:Class="AICodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="AI Code Analyzer" Height="800" Width="1500">

    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu at the top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Start" Click="MenuStart_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⟳" FontSize="14" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open..." Click="MenuOpenFile_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📄" FontSize="14" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open Past Responses..." Click="MenuOpenPastResponses_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="MenuRecentFiles" Header="Recent _Files">
                    <MenuItem Header="(No recent files)" IsEnabled="False" />
                </MenuItem>
                <Separator />
                <MenuItem Header="_Exit" Click="MenuExit_Click" />
            </MenuItem>
            <MenuItem Header="_Settings" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Configure..." Click="MenuConfigure_Click" />
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_About" Click="MenuAbout_Click" />
            </MenuItem>
        </Menu>

        <!-- StatusBar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="TxtStatus" Text="Ready" />
        </StatusBar>

        <!-- Main content grid (fills remaining space) -->
        <Grid Margin="10">
            <!-- Grid content remains unchanged -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Row 0: Project Selection -->
                <RowDefinition Height="*" />    <!-- Row 1: Files List (includes token count) -->
                <RowDefinition Height="Auto" /> <!-- Row 2: API Selection -->
                <RowDefinition Height="Auto" /> <!-- Row 3: Initial Prompt (now includes analyze button) -->
                <RowDefinition Height="Auto" /> <!-- Row 4: Follow-up Question -->
                <RowDefinition Height="120" />  <!-- Row 5: Log Panel -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="7.8*" />
            </Grid.ColumnDefinitions>

            <!-- Project Selection Area -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Select Files" Margin="0,0,5,0" Padding="0">
                <StackPanel Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtSelectedFolder" IsReadOnly="True" Grid.Column="0" Margin="0,0,5,0" />
                        <Button x:Name="BtnSelectFolder" Content="Select Folder" Grid.Column="1"
                                Click="BtnSelectFolder_Click" Padding="8,3" Margin="0,0,5,0" Height="25"/>
                        <Button x:Name="BtnSelectFiles" Content="Add Files" Grid.Column="2"
                                Click="BtnSelectFiles_Click" Padding="8,3" Margin="0,0,5,0" Height="25"
                                ToolTip="Add specific files to the analysis" />
                        <Button x:Name="BtnClearFiles" Content="Clear" Grid.Column="3" Click="BtnClearFiles_Click" Height="25"
                                Padding="8,3" ToolTip="Clear all selected files" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Files List -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Files List" Margin="0,0,5,0" Padding="0"
                      VerticalAlignment="Stretch">
                <DockPanel Margin="0,5" VerticalAlignment="Stretch">
                    <!-- Token Count at the bottom -->
                    <TextBlock x:Name="TxtTokenCount" 
                               DockPanel.Dock="Bottom" 
                               Margin="5,5,5,0"
                               Text="" />
        
                    <!-- Files ListView fills the remaining space -->
                    <ListView x:Name="LvFiles" VerticalAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </DockPanel>
            </GroupBox>

            <!-- API Selection Area -->
            <GroupBox Grid.Row="2" Grid.Column="0" Header="AI API Selection" Margin="0,0,5,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- AI API ComboBox -->
                    <ComboBox x:Name="CboAiApi" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,5,5,5"
                              SelectionChanged="CboAiApi_SelectionChanged" />

                    <!-- Model Selection -->
                    <Label Content="Model:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <ComboBox x:Name="CboModel"
                              Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                              IsEnabled="False"
                              Margin="0,0,5,5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              SelectionChanged="CboModel_SelectionChanged" />

                    <!-- API Key Section -->
                    <TextBlock Text="API Key:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5" />
                    <PasswordBox x:Name="TxtApiKey" Grid.Row="2" Grid.Column="1" Margin="0,0,5,5"  />
                    <Button x:Name="BtnSaveKey" Content="Save" Grid.Row="2" Grid.Column="2" Margin="0,0,5,5"  Click="BtnSaveKey_Click" Padding="8,3" Height="25"/>
                    <ComboBox x:Name="CboPreviousKeys" Grid.Row="2" Grid.Column="3" Margin="0,0,5,5"  SelectionChanged="CboPreviousKeys_SelectionChanged" Width="90"/>
                    
                    <!-- Model Description -->
                    <TextBlock x:Name="TxtModelDescription" 
                               Grid.Row="3" 
                               Grid.Column="0" 
                               Grid.ColumnSpan="4"
                               TextWrapping="Wrap"
                               Margin="5,5,5,5"
                               FontStyle="Italic"
                               FontSize="11"
                               Foreground="#707070" />
                </Grid>
            </GroupBox>

            <!-- Initial Prompt -->
            <GroupBox Grid.Row="3" Grid.Column="0" Header="Initial Prompt" Margin="0,0,5,5" Padding="0">
                <StackPanel Margin="5">
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="CboPromptTemplate" Grid.Column="0"
                                  SelectionChanged="CboPromptTemplate_SelectionChanged"
                                  DisplayMemberPath="Name"
                                  Margin="0,0,5,0" />
                        <Button x:Name="BtnConfigurePrompts" Content="Edit"
                                Grid.Column="1" Padding="8,3" Height="25"
                                Click="BtnConfigurePrompts_Click" />
                    </Grid>
        
                    <!-- Analyze Button moved inside this GroupBox -->
                    <Button Content="Send Initial Prompt" Height="25"
                            Click="BtnAnalyze_Click" />
                </StackPanel>
            </GroupBox>

            <!-- GridSplitter -->
            <GridSplitter
                Grid.Row="0"
                Grid.RowSpan="5"
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="#DDDDDD"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeWE" />

            <!-- Response Area -->
            <GroupBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="5" Header="AI Analysis" Margin="5,0,0,0" Padding="5">
                <DockPanel>
                    <!-- Top Control Bar (Navigation and Zoom) -->
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" /> <!-- Previous Button -->
                            <ColumnDefinition Width="*" />    <!-- Counter -->
                            <ColumnDefinition Width="Auto" /> <!-- Next Button -->
                            <ColumnDefinition Width="Auto" /> <!-- Zoom Controls -->
                        </Grid.ColumnDefinitions>

                        <!-- Message Navigation Panel -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3">
                            <Button x:Name="BtnPreviousResponse"
                                    Content="◀" FontSize="14" Width="30" Height="30"
                                    ToolTip="View Previous Response"
                                    Click="BtnPreviousResponse_Click"
                                    IsEnabled="False" Margin="0,0,5,0" />

                            <TextBlock x:Name="TxtResponseCounter"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="Response 0 of 0" FontSize="12" Margin="5,0" />

                            <Button x:Name="BtnNextResponse"
                                    Content="▶" FontSize="14" Width="30" Height="30"
                                    ToolTip="View Next Response"
                                    Click="BtnNextResponse_Click"
                                    IsEnabled="False" Margin="5,0,0,0" />
                        </StackPanel>

                        <!-- Zoom Controls Panel -->
                        <StackPanel Orientation="Horizontal" Grid.Column="3" HorizontalAlignment="Right">
                            <Button x:Name="BtnZoomOut" Content="-" Width="25" Height="30" Click="BtnZoomOut_Click"
                                    ToolTip="Zoom Out (Ctrl+Scroll)" Margin="0,0,2,0" />
                            <TextBlock x:Name="TxtZoomLevel" Text="100%" VerticalAlignment="Center" Margin="5,0"
                                       ToolTip="Current Zoom Level" />
                            <Button x:Name="BtnZoomIn" Content="+" Width="25" Height="30" Click="BtnZoomIn_Click"
                                    ToolTip="Zoom In (Ctrl+Scroll)" Margin="2,0,5,0" />
                            <Button x:Name="BtnResetZoom" Content="Reset" Height="30" Click="BtnResetZoom_Click"
                                    ToolTip="Reset Zoom (100%)" />
                        </StackPanel>
                    </Grid>

                    <!-- Bottom Control Bar (Save/Toggle) -->
                    <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                        <!-- ... (Existing Save/Toggle buttons remain here) ... -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnSaveResponse" Content="Save Response" Grid.Column="0" Height="30"
                                Margin="0,0,2,0" Click="BtnSaveResponse_Click" IsEnabled="False" />
                        <Button x:Name="BtnToggleMarkdown" Content="Show Raw Text" Grid.Column="1" Height="30"
                                Margin="2,0,0,0" Click="BtnToggleMarkdown_Click" IsEnabled="False" />
                    </Grid>

                    <!-- Markdown Display -->
                    <Grid>
                        <!-- Regular TextBox (for raw view) -->
                        <TextBox x:Name="TxtResponse" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" Visibility="Collapsed" />

                        <!-- Markdown Viewer -->
                        <ScrollViewer x:Name="MarkdownScrollViewer" Visibility="Visible"
                                      VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollBarVisibility="Disabled"
                                      PanningMode="None"
                                      CanContentScroll="False"
                                      PreviewMouseWheel="MarkdownScrollViewer_PreviewMouseWheel"
                                      SizeChanged="MarkdownScrollViewer_SizeChanged">
                            <!-- MarkdownViewer IS a FlowDocumentScrollViewer -->
                            <markdig:MarkdownViewer x:Name="MarkdownViewer"
                                                    Background="White"
                                                    Padding="10"
                                                    HorizontalAlignment="Stretch" />
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <!-- Follow-up Question -->
            <GroupBox Grid.Row="4" Grid.Column="0" Header="Follow-up Question" Margin="5,0,0,0" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" /> <!-- For checkbox -->
                        <RowDefinition Height="*" />   <!-- For textbox -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" /> <!-- Expanding space -->
                        <ColumnDefinition Width="Auto" /> <!-- For button -->
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="ChkIncludeSelectedFiles" Content="Include files with follow-up question"
                              Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,5"
                              IsEnabled="False"
                              ToolTip="Include the files selected in the file list with your follow-up question" />
                    <TextBox x:Name="TxtFollowupQuestion" Grid.Row="1" Grid.Column="0" Height="60" TextWrapping="Wrap"
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsEnabled="False" />
                    <Button x:Name="BtnSendFollowup" Content="Send" Grid.Row="1" Grid.Column="1" Width="60" 
                            Margin="5,0,0,0" IsEnabled="False" Click="BtnSendFollowup_Click" />
                </Grid>
            </GroupBox>

            <!-- Log Panel -->
            <GroupBox Grid.Row="5"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Header="Operation Log"
                      Margin="0,5,0,0"
                      Padding="5"
                      VerticalAlignment="Stretch">
                <TextBox x:Name="TxtLog"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalAlignment="Stretch"
                         Background="#F5F5F5" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>