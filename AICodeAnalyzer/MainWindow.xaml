<Window x:Class="AICodeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="AI Code Analyzer" Height="800" Width="1500">

    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <!-- Enhanced Send Button Style -->
        <Style x:Key="EnhancedButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4172C3" Offset="0" />
                        <GradientStop Color="#305EA8" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderBrush" Value="#203F70" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Height" Value="38" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3" />
                            </Border.Effect>
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4F86E3" Offset="0" />
                                            <GradientStop Color="#3A70C8" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#305EA8" Offset="0" />
                                            <GradientStop Color="#254980" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="EnhancedGridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4F86E3" Offset="0.0" />
                        <GradientStop Color="#3A70C8" Offset="0.5" />
                        <GradientStop Color="#4F86E3" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <Grid>
                                <!-- Visual indicators - dots in the center -->
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                    <Ellipse Width="3" Height="3" Fill="#ffffff" Margin="0,2,0,2" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#DDDDDD" Offset="0.0" />
                                            <GradientStop Color="#AAAAAA" Offset="0.5" />
                                            <GradientStop Color="#DDDDDD" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu at the top -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Restart" Click="MenuStart_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/reset.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open..." Click="MenuOpenPastResponses_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/open.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="MenuRecentFiles" Header="Recent _Files">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/recentfiles.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                    <MenuItem Header="(No recent files)" IsEnabled="False" />
                </MenuItem>
                <Separator />
                <MenuItem Header="_Exit" Click="MenuExit_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/exit.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Settings" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_Configure..." Click="MenuConfigure_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/settings.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource MenuItemStyle}">
                <MenuItem Header="_About" Click="MenuAbout_Click">
                    <MenuItem.Icon>
                        <Image Source="pack://application:,,,/images/about.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- StatusBar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="TxtStatus" Text="Ready" />
        </StatusBar>

        <!-- Main content grid (fills remaining space) -->
        <Grid Margin="10">
            <!-- Grid content remains unchanged -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Row 0: Project Selection -->
                <RowDefinition Height="*" />    <!-- Row 1: Files List (includes token count) -->
                <RowDefinition Height="Auto" /> <!-- Row 2: API Selection -->
                <RowDefinition Height="Auto" /> <!-- Row 3: Initial Prompt (now includes analyze button) -->
                <RowDefinition Height="Auto" /> <!-- Row 4: Follow-up Question -->
                <RowDefinition Height="120" />  <!-- Row 5: Log Panel -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.0*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8.0*" />
            </Grid.ColumnDefinitions>

            <!-- Project Selection Area -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Select Files" Margin="0,0,5,0" Padding="0">
                <StackPanel Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtSelectedFolder" IsReadOnly="True" Grid.Column="0" Margin="0,0,5,0" />
                        <Button x:Name="BtnSelectFolder" Content="Select Folder" Grid.Column="1"
                                Click="BtnSelectFolder_Click" Padding="8,3" Margin="0,0,5,0" Height="25" />
                        <Button x:Name="BtnSelectFiles" Content="Add Files" Grid.Column="2"
                                Click="BtnSelectFiles_Click" Padding="8,3" Margin="0,0,5,0" Height="25"
                                ToolTip="Add specific files to the analysis" />
                        <Button x:Name="BtnClearFiles" Content="Clear" Grid.Column="3" Click="BtnClearFiles_Click"
                                Height="25"
                                Padding="8,3" ToolTip="Clear all selected files" />
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Files List -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Files List" Margin="0,0,5,0" Padding="0"
                      VerticalAlignment="Stretch">
                <DockPanel Margin="0,5" VerticalAlignment="Stretch">
                    <!-- Token Count at the bottom -->
                    <TextBlock x:Name="TxtTokenCount"
                               DockPanel.Dock="Bottom"
                               Margin="5,5,5,0"
                               Text=""
                               FontStyle="Italic"
                               FontSize="11"
                               Foreground="#707070" />

                    <!-- Files ListView fills the remaining space -->
                    <ListView x:Name="LvFiles" VerticalAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </DockPanel>
            </GroupBox>

            <!-- API Selection Area -->
            <GroupBox Grid.Row="2" Grid.Column="0" Header="AI API Selection" Margin="0,0,5,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- AI API ComboBox -->
                    <ComboBox x:Name="CboAiApi" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,5,5,5"
                              SelectionChanged="CboAiApi_SelectionChanged" />

                    <!-- Model Selection -->
                    <Label Content="Model:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <ComboBox x:Name="CboModel"
                              Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                              IsEnabled="False"
                              Margin="0,0,5,5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              SelectionChanged="CboModel_SelectionChanged" />

                    <!-- API Key Section -->
                    <TextBlock Text="API Key:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5" />
                    <ComboBox x:Name="CboPreviousKeys" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                              HorizontalAlignment="Stretch" 
                              Margin="0,0,5,5" />
                    <Button x:Name="BtnAddKey" Grid.Row="2" Grid.Column="3" Content="Add Key"
                            VerticalAlignment="Center"
                            Margin="0,0,5,5" Height="25" Padding="8,3" Click="BtnConfigurePrompts_Click" />

                    <!-- Model Description -->
                    <TextBlock x:Name="TxtModelDescription"
                               Grid.Row="3"
                               Grid.Column="0"
                               Grid.ColumnSpan="4"
                               TextWrapping="Wrap"
                               Margin="5,5,5,5"
                               FontStyle="Italic"
                               FontSize="11"
                               Foreground="#707070" />
                </Grid>
            </GroupBox>

            <!-- Merged AI Query GroupBox (combines Initial Prompt and Follow-up) -->
            <GroupBox Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" Header="AI Query" Margin="0,0,5,0" Padding="0">
                <StackPanel Margin="5">
                    <!-- Prompt Template Selection -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="CboPromptTemplate" Grid.Column="0"
                                  SelectionChanged="CboPromptTemplate_SelectionChanged"
                                  DisplayMemberPath="Name"
                                  Margin="0,0,5,0" />
                        <Button x:Name="BtnConfigurePrompts" Content="Edit"
                                Grid.Column="1" Padding="8,3" Height="25"
                                Click="BtnConfigurePrompts_Click" />
                    </Grid>

                    <!-- Option Checkboxes -->
                    <StackPanel Margin="0,0,0,10">
                        <CheckBox x:Name="ChkIncludeInitialPrompt" Content="Include initial prompt template"
                                  IsChecked="True" Margin="0,0,0,5"
                                  ToolTip="When checked, the initial prompt template will be included in your request" />

                        <CheckBox x:Name="ChkIncludeSelectedFiles" Content="Include selected files"
                                  IsChecked="True" Margin="0,0,0,5"
                                  ToolTip="Include the files selected in the file list with your request" />

                        <CheckBox x:Name="SendfollowUpReminder" Content="Send follow-up reminder with summary"
                                  IsChecked="False" Margin="0,0,0,0"
                                  ToolTip="Send follow-up reminder with summary" />
                    </StackPanel>

                    <!-- Text Input Area -->
                    <TextBox x:Name="TxtFollowupQuestion"
                             VerticalAlignment="Stretch"
                             MinHeight="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,5" />

                    <!-- Send Button -->
                    <Button x:Name="BtnSendQuery"
                            Content="Send Query"
                            Style="{StaticResource EnhancedButtonStyle}"
                            Margin="0,5,0,0"
                            Click="BtnAnalyze_Click">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Send Query"
                                               VerticalAlignment="Center"
                                               FontSize="14" />
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </GroupBox>

            <!-- GridSplitter -->
            <GridSplitter
                Grid.Row="0"
                Grid.RowSpan="5"
                Grid.Column="1"
                Style="{StaticResource EnhancedGridSplitterStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeWE" />

            <!-- Response Area -->
            <GroupBox Grid.Row="0" Grid.Column="2" Grid.RowSpan="5" Header="AI Analysis" Margin="5,0,0,0" Padding="5">
                <DockPanel>
                    <!-- Top Control Bar (Navigation and Zoom) -->
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" /> <!-- Previous Button -->
                            <ColumnDefinition Width="*" />    <!-- Counter -->
                            <ColumnDefinition Width="Auto" /> <!-- Next Button -->
                            <ColumnDefinition Width="Auto" /> <!-- Zoom Controls -->
                        </Grid.ColumnDefinitions>

                        <!-- Message Navigation Panel -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3">
                            <Button x:Name="BtnPreviousResponse"
                                    Content="◀" FontSize="14" Width="30" Height="30"
                                    ToolTip="View Previous Response"
                                    Click="BtnPreviousResponse_Click"
                                    IsEnabled="False" Margin="0,0,5,0" />

                            <TextBlock x:Name="TxtResponseCounter"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="Response 0 of 0" FontSize="12" Margin="5,0" />

                            <Button x:Name="BtnNextResponse"
                                    Content="▶" FontSize="14" Width="30" Height="30"
                                    ToolTip="View Next Response"
                                    Click="BtnNextResponse_Click"
                                    IsEnabled="False" Margin="5,0,0,0" />
                        </StackPanel>

                        <!-- Zoom Controls Panel -->
                        <StackPanel Orientation="Horizontal" Grid.Column="3" HorizontalAlignment="Right">
                            <Button x:Name="BtnZoomOut" Content="-" Width="25" Height="30" Click="BtnZoomOut_Click"
                                    ToolTip="Zoom Out (Ctrl+Scroll)" Margin="0,0,2,0" />
                            <TextBlock x:Name="TxtZoomLevel" Text="100%" VerticalAlignment="Center" Margin="5,0"
                                       ToolTip="Current Zoom Level" />
                            <Button x:Name="BtnZoomIn" Content="+" Width="25" Height="30" Click="BtnZoomIn_Click"
                                    ToolTip="Zoom In (Ctrl+Scroll)" Margin="2,0,5,0" />
                            <Button x:Name="BtnResetZoom" Content="Reset" Height="30" Click="BtnResetZoom_Click"
                                    ToolTip="Reset Zoom (100%)" />
                        </StackPanel>
                    </Grid>

                    <!-- Bottom Control Bar (Save/Toggle) -->
                    <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnShowInputQuery" Content="Show Input Query" Grid.Column="0" Height="30"
                                Margin="0,0,2,0" Click="BtnShowInputQuery_Click" IsEnabled="False"
                                ToolTip="Show the exact query and file summary sent to the AI" />
                        <Button x:Name="BtnSaveResponse" Content="Save Response" Grid.Column="1" Height="30"
                                Margin="0,0,2,0" Click="BtnSaveResponse_Click" IsEnabled="False" />
                        <Button x:Name="BtnSaveEdits" Content="Apply Edits" Grid.Column="2" Height="30"
                                Margin="0,0,2,0" Click="BtnSaveEdits_Click" IsEnabled="False" />
                        <Button x:Name="BtnToggleMarkdown" Content="Show Raw Text" Grid.Column="3" Height="30"
                                Margin="2,0,0,0" Click="BtnToggleMarkdown_Click" IsEnabled="False" />
                    </Grid>

                    <!-- Markdown Display -->
                    <Grid>
                        <!-- Regular TextBox (for raw view) -->
                        <TextBox x:Name="TxtResponse"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 IsReadOnly="False"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 Visibility="Collapsed"
                                 PreviewMouseWheel="TxtResponse_PreviewMouseWheel" />

                        <!-- Markdown Viewer -->
                        <ScrollViewer x:Name="MarkdownScrollViewer" Visibility="Visible"
                                      VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollBarVisibility="Disabled"
                                      PanningMode="None"
                                      CanContentScroll="False"
                                      PreviewMouseWheel="MarkdownScrollViewer_PreviewMouseWheel"
                                      SizeChanged="MarkdownScrollViewer_SizeChanged">
                            <!-- MarkdownViewer IS a FlowDocumentScrollViewer -->
                            <markdig:MarkdownViewer x:Name="MarkdownViewer"
                                                    Background="White"
                                                    Padding="10"
                                                    HorizontalAlignment="Stretch" />
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </GroupBox>

            <!-- Log Panel -->
            <GroupBox Grid.Row="5"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Header="Operation Log"
                      Margin="0,5,0,0"
                      Padding="5"
                      VerticalAlignment="Stretch">
                <TextBox x:Name="TxtLog"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalAlignment="Stretch"
                         Background="#F5F5F5" />
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>